<div class="container-bg">
  <div class="form-container">
    <h2 class="title">Register</h2><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-lg" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "form-control input-lg" %>
      </div>
      <div class="clear"><%= f.submit "Let's Go", class: "btn primary-color btn-lg wd-180" %></div>
    <% end %><br>
  </div>
</div>
